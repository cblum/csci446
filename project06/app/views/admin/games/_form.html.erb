<% form_for @games do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :creator %>
    <%= f.select :user_id, @users.collect { |u| [u.to_s, u.id]}, :include_blank => true %>
  </p>
  <p><%= f.submit %></p>
<% end %>
