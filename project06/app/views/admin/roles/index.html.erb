<% content_for :subtitle do %>
Admin
<% end %>

<h2>Roles</h2>

<table>
  <tr>
    <th>Name</th>
    <th>Number of Users</th>
  </tr>

<% @role.each do |role| %>
  <tr>
    <td><%=h link_to role.name, edit_admin_role_path(role) %></td>
    <td><%=h role.users.count %></td>
  </tr>
<% end %>
</table>

<br />

<p>
  <%= link_to "New Role", new_admin_role_path %>
</p>
